<ol reversed class="postlist">
  {% for post in postslist.slice(0,2) | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <h3>
      <a href="{{ post.url | url }}" class="postlist-link">
        {% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
    </a>
    </h3>
    <time class="postlist-date" datetime="{{ post.date | dateToFormat('yyyy-MM-dd') }}">{{ post.date | dateToFormat('dd
      LLL yyyy') }}</time>
    {% for tag in post.data.tags | filterTagList %}
    {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
    <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
    {% endfor %}
  </li>
  {% endfor %}
</ol>