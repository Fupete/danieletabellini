<header class="site-header" role="banner">
    <div class="site-header__container">
        <div class="site-header__right">
            {% include "navigation.njk" %}
        </div>
        <div id="langAlternatives">
            {% for link in page.url | locale_links %}
                {%- if loop.first %}
                <p lang="{{link.lang}}"><small><span class="visually-hidden">{%- if page.lang == 'it' %}This page is also available in English:{% else %}Questa pagina Ã¨ disponibile anche in italiano:{% endif %} </span>
                {% endif %}
                {%- if not loop.first %}, {% endif %}
                <a href="{{link.url | url}}" lang="{{link.lang}}" hreflang="{{link.lang}}">{{link.label}}</a></small></p>
            {% endfor %}
        </div>
    </div>
</header>
