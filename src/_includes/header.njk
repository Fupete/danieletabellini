<header class="site-header" role="banner">
    <div class="site-header__container">
        {% set homeUrl %}/{{page.lang}}/{% endset %}
        <div class="site-header__left nav__item {% if homeUrl == page.url %}nav__item--active{% endif %}">
            <a class="nav__link" href="{{homeUrl | url}}">
                {% if page.lang == 'en' %}Daniele Tabellini{% else %}Daniele Tabellini{% endif %}
            </a>
        </div>
        <div class="site-header__right">
            {% include "navigation.njk" %}
        </div>
        <div id="langAlternatives">
            {% for link in page.url | locale_links %}
                {%- if loop.first %}
                <p lang="{{link.lang}}"><small> {%- if page.lang == 'it' %}This page is also available in{% else %}Questa pagina Ã¨ disponibile anche in{% endif %}
                {% endif %}
                {%- if not loop.first %}, {% endif %}
                <a href="{{link.url | url}}" lang="{{link.lang}}" hreflang="{{link.lang}}">{{link.label}}</a></small></p>
            {% endfor %}
        </div>
    </div>
</header>
